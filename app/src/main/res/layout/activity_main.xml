        <!-- Version card -->
        <LinearLayout
            android:id="@+id/versionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:background="@drawable/rounded_item"
            android:layout_marginBottom="14dp"
            android:clipToOutline="true">

            <TextView
                android:id="@+id/versionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version info"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App: -"
                android:textColor="#A0A0A0"
                android:textSize="13sp"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/camVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsung Camera: -"
                android:textColor="#A0A0A0"
                android:textSize="13sp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- Help card -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="14dp">

            <LinearLayout
                android:id="@+id/helpCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp"
                android:background="@drawable/rounded_item"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/helpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to enable"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/helpSteps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#A0A0A0"
                    android:textSize="13sp"
                    android:lineSpacingExtra="3dp"
                    android:paddingTop="6dp"
                    android:text="1. Enable SCam Unlock in LSPosed.\n\n2. Select Samsung Camera in the scope.\n\n3. If Camera doesn’t show: ⋮ → Hide → disable system apps filter.\n\n4. Kill camera process.\n\nWhen LSPosed loads the module, the status turns green." />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Kill cam -->
    <Button
        android:id="@+id/killCameraButton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="15dp"

        android:backgroundTint="#62b2dd"
        android:text="Kill Samsung Camera"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

